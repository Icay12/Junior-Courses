		//create menu items

		final JMenuItem jmiOpen = new JMenuItem("Open");
		final JMenuItem jmiSave = new JMenuItem("Save");		
		final JMenuItem jmiExit = new JMenuItem("Exit");
		final JRadioButtonMenuItem jmiLine = new JRadioButtonMenuItem("Line");
		final JRadioButtonMenuItem jmiRectangle = new JRadioButtonMenuItem("Rectangle");
		final JRadioButtonMenuItem jmiCircle = new JRadioButtonMenuItem("Circle");
		final JRadioButtonMenuItem jmiText = new JRadioButtonMenuItem("Text");
		final JRadioButtonMenuItem jmiSelect = new JRadioButtonMenuItem("Select");
		//final JMenuItem jmiClear = new JMenuItem("Clear");
